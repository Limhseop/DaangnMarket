<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="mapper.member">

	<!-- 유지환 파트-->
	<!-- 회원 정보 가져오기 -->
	<select id="getmember" parameterType="java.lang.String" resultType="com.spring.vo.MemberVO">
		select id,name,email,phone,addr,introduce,to_char(joindate,'yyyy-mm-dd')joindate,sale,purchase,imagepath from daangn_member where id=#{id}
	</select>
	
	
	
	
	<!-- 저도 mapper.member로 줘서 ㅠㅠ 여기에 붙여요 -->
	<!-- 김세희 파트-->
	
	<!-- 로그인 체크 -->
	<select id="login" parameterType="map" resultType="int">
	select count(*) from daangn_member where id=#{id} and pass=#{pass}
	</select>

	<!-- 회원가입 아이디 중복체크 -->
	<select id="idcheck" parameterType="java.lang.String" resultType="int">
	select count(*) from daangn_member where id=#{id}
	</select>
	
</mapper>