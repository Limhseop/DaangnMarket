DROP TABLE DAANGN_BOARD;
DROP TABLE daangn_member;
DROP SEQUENCE BOARD_NO_SEQ;

-- 寃뚯떆�뙋(�룞�꽕�깮�솢) �뀒�씠釉�
CREATE TABLE DAANGN_BOARD(
  NO NUMBER(10) CONSTRAINT PK_BOARD_NO PRIMARY KEY, -- 寃뚯떆�뙋 踰덊샇
  CATEGORY VARCHAR2(30) CONSTRAINT NN_BOARD_CATEGORY NOT NULL,  -- 移댄뀒怨좊━
  CONTENT VARCHAR2(2000) CONSTRAINT NN_BOARD_CONTENT NOT NULL, -- �궡�슜
  ID VARCHAR2(100) CONSTRAINT NN_BOARD_ID NOT NULL, -- ID
  TOWN VARCHAR2(30) CONSTRAINT NN_BOARD_TOWN NOT NULL,  -- �룞�꽕
  WDATE DATE CONSTRAINT NN_BOARD_DATE NOT NULL, -- �옉�꽦�씪�옄
  IMG VARCHAR2(100), -- �궗�슜�옄媛� 蹂닿쾶�맆 �뙆�씪 紐�
  SIMG  VARCHAR2(100)  -- �떎�젣濡� ���옣�맆 �뙆�씪 紐�
);

-- 寃뚯떆�뙋 �떆���뒪 �깮�꽦
CREATE SEQUENCE BOARD_NO_SEQ
START WITH 1 -- 1遺��꽣 �떆�옉
INCREMENT BY 1 -- 1�뵫 利앷�
CACHE 2; -- 硫붾え由ъ뿉 誘몃━ �삱�젮 �넃�쓣 �씤�뜳�뒪 媛쒖닔. 鍮꾩젙�긽 醫낅즺�릺硫� LAST_NUMBER媛� 2�뵫 利앷�

