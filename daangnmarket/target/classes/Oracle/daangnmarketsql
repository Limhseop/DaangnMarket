  CONTENT VARCHAR2(2000) CONSTRAINT NN_BOARD_CONTENT NOT NULL, -- �궡�슜
  ID VARCHAR2(100) CONSTRAINT NN_BOARD_ID NOT NULL, -- ID
  TOWN VARCHAR2(30) CONSTRAINT NN_BOARD_TOWN NOT NULL,  -- �룞�꽕
  WDATE DATE CONSTRAINT NN_BOARD_DATE NOT NULL, -- �옉�꽦�씪�옄
